---
import { profileConfig } from "../config"; // 导入个人资料配置
import { url } from "../utils/url-utils"; // 导入 URL 工具函数

const currentYear = new Date().getFullYear(); // 获取当前年份
---

<!-- 分割线装饰，顶部边框 -->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<!-- 页脚主体区域，圆角背景和边框 -->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        <!-- 版权信息，显示当前年份和昵称 -->
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved.<br>
        <!-- 技术支持信息 -->
        Powered by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://astro.build">Astro</a><br>
        <!-- 部署信息 -->
        本站部署在
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://app.netlify.com/">Netlify</a> 并加速于
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://www.cloudflare.com/">Cloudflare</a>
    </div>
</div>
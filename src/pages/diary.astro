        const replyBtns = document.querySelectorAll('.reply-btn');
        replyBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                // 这里可以添加回复功能，目前仅输出日志
                console.log('回复功能待实现');
            });
        });
    });
</script>